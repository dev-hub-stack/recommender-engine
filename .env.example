# Recommendation Engine Service - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Alternative individual database settings (if DATABASE_URL not used)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mastergroup_recommendations
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production

# Performance Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
CACHE_TTL=3600
MAX_WORKERS=4

# Security Settings (Update with secure values)
JWT_SECRET_KEY=your_secure_jwt_secret_key_here
API_SECRET_KEY=your_secure_api_secret_key_here

# Monitoring (Optional)
PROMETHEUS_PORT=8000
METRICS_ENABLED=true

# Logging
LOG_FILE_PATH=logs/recommendation_service.log
LOG_ROTATION_MAX_BYTES=10485760
LOG_ROTATION_BACKUP_COUNT=5
