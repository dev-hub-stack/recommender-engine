# ============================================
# MasterGroup Recommendation Engine - Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values
#
# Quick Start:
#   cp .env.example .env
#   python scripts/setup_database.py
#   uvicorn src.main:app --host 0.0.0.0 --port 8001
# ============================================

# ============================================
# DATABASE CONFIGURATION (Required)
# ============================================
# Option 1: Full URL
DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: Individual settings (used if DATABASE_URL not set)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=mastergroup_recommendations
PG_USER=postgres
PG_PASSWORD=your_password
PG_SSLMODE=prefer

# ============================================
# MASTERGROUP API (Required for data sync)
# ============================================
MASTERGROUP_API_KEY=your_api_key_here
MASTERGROUP_API_URL=https://api.mastergroup.com
MASTERGROUP_API_TIMEOUT=30

# ============================================
# AWS PERSONALIZE (Optional - for ML recommendations)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-personalize-data-bucket
PERSONALIZE_ROLE_ARN=arn:aws:iam::123456789:role/PersonalizeRole

# Solution Version ARNs (after creating solutions)
USER_PERSONALIZATION_VERSION=arn:aws:personalize:us-east-1:123456789:solution/user-personalization/version
SIMILAR_ITEMS_VERSION=arn:aws:personalize:us-east-1:123456789:solution/similar-items/version

# ============================================
# REDIS CACHE (Optional)
# ============================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ============================================
# APPLICATION SETTINGS
# ============================================
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production

# ============================================
# SECURITY (Required - generate secure values!)
# ============================================
JWT_SECRET_KEY=your_secure_jwt_secret_key_here
API_SECRET_KEY=your_secure_api_secret_key_here

# ============================================
# PERFORMANCE
# ============================================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
MAX_WORKERS=4

# ============================================
# MONITORING (Optional)
# ============================================
PROMETHEUS_PORT=8000
METRICS_ENABLED=true
LOG_FILE_PATH=logs/recommendation_service.log
